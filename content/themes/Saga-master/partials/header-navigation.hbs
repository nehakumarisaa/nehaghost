<section aria-labelledby="blog-title">
    <a id="blog-title" class="blog-title" href="{{@site.url}}">
        {{#if @site.logo}}
            <img class="blog-logo" src="{{img_url @site.logo}}" alt="{{@site.title}}" />
        {{else}}
            {{@site.title}}
        {{/if}}
    </a>
    {{#is "index"}}{{#unless @site.cover_image}}
        <span class="blog-description">{{@site.description}}</span>
    {{/unless}}{{/is}}
</section>
<nav class="primary-menu" aria-label="{{t "Primary menu"}}">{{navigation}}</nav>